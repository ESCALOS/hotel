---
import { getI18N } from "@/i18n";
import ImageRoom from "./ImageRoom.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const data = i18n.about.bestRoom;
---

<div class="w3l-about-us best-rooms py-5">
  <div class="container py-lg-5 py-sm-4">
    <div class="maghny-gd-1">
      <div class="row about-text">
        <div class="col-lg-6">
          <h3 class="title-big">
            {data.title}
          </h3>
        </div>
        <div class="col-lg-6">
          <p>
            {data.text1}
          </p>
          <p class="mt-3">
            {data.text2}
          </p>
        </div>
      </div>
      <div class="row mt-5">
        {data.rooms.map((room) => <ImageRoom room={room} />)}
      </div>
    </div>
  </div>
</div>
