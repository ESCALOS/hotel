---
interface Props {
  item: {
    id: number;
    icon: string;
    title: string;
    description: string;
  };
}

const {
  item: { id, icon, title, description },
} = Astro.props;
---

<div class:list={["col-6 mt-4", id % 2 ? "pl-2" : "pr-2"]}>
  <div class="grids-speci1">
    <span class:list={["fa", icon]}></span>
    <h3 class="title-spe">{title}</h3>
    <p>{description}</p>
  </div>
</div>
