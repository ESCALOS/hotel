---
interface Props {
    title: string,
    button: string,
    href: string,
    imageClass: string
}
const { title, button, href, imageClass } = Astro.props
---
<div class="item">
    <li>
        <div class:list={[
            "slider-info banner-view bg bg2",
            imageClass
        ]}>
            <div class="banner-info">
                <div class="container">
                    <div class="banner-info-bg">
                        <h5>
                            {title}
                        </h5>
                        <a class="btn btn-style transparent-btn mt-sm-5 mt-4" href={href}>
                            {button}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </li>
</div>