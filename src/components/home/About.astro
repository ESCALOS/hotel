---
import { Image } from "astro:assets";
import TopImage from "@/images/top.jpg";
import BottomImage from "@/images/bottom.jpg";
import { getI18N } from "@/i18n";
interface Props {
  href: string;
}

const { href } = Astro.props;
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const data = i18n.home.about;
---

<section class="w3l-about py-5">
  <div class="container py-sm-4">
    <div class="row">
      <div class="col-lg-6 about-left mb-md-0 mb-5">
        <h3 class="title-big">{data.title}</h3>
        <h5>{data.subtitle}</h5>
        <p class="mt-3">
          {data.description}
        </p>
        <a href={href} class="btn btn-style btn-primary mt-sm-5 mt-4"
          >{data.button}</a
        >
      </div>
      <div class="col-lg-6 about-right position-relative mt-lg-0 mt-5">
        <Image src={TopImage} alt="" class="img-fluid img-border mt-4" />
        <Image
          src={BottomImage}
          alt=""
          class="img-fluid position-absolute img-position"
        />
      </div>
    </div>
  </div>
</section>
