---
import Logo from "@/images/logo.png";
import { Image } from "astro:assets";
---

<style>
  .loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: gray;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
  }
</style>

<div class="loading-overlay">
  <Image src={Logo} height={250} alt="Loading Logo" />
</div>
