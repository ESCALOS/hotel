---
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n";
import Breadcrump from "@/components/about/Breadcrump.astro";
import BestRooms from "@/components/about/BestRooms.astro";
import Features from "@/components/about/Features.astro";
import Stats from "@/components/about/Stats.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n.META_TITLE} description={i18n.META_DESCRIPTION}>
  <Breadcrump />
  <BestRooms />
  <Features />
  <Stats />
</Layout>
